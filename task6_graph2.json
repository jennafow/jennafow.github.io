{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Coffee Future Prices - Past 3 Months",
      "anchor": "start",
      "subtitle": "Data scraped from Yahoo Finance",
      "fontSize": "16",
      "subtitleFontSize": "12",
      "color": "#1f832c",
      "subtitleColor": "#000000"
    },
    "height": "200",
    "width": "400",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#e2e4e2",
    "view": {
      "fill": "#e2e4e2",
      "strokeOpacity": 0
    },
    "data": {
      "url": "Coffee_hist_prices.csv"
    },
    "mark": {
      "type": "line",
      "color": "#1f832c"
    },
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "title": "Date",
        "axis": {
          "labelFontSize": 12,
          "titleFontSize": 14
        }
      },
      "y": {
        "field": "Close",
        "type": "quantitative",
        "title": "Close Price (USD)",
        "scale": {},
        "axis": {
          "labelFontSize": 12,
          "titleFontSize": 14
        }
      }
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "color": "#1f832c"
        },
        "encoding": {
          "x": {
            "field": "Date",
            "type": "temporal"
          },
          "y": {
            "field": "Close",
            "type": "quantitative"
          }
        }
      },
      {
        "mark": {
        "type": "point",
        "shape": "circle",
        "color": "#2de65b",
        "size": 100,
        "filled": true
        },
        "encoding": {
          "x": {
            "field": "Date",
            "type": "temporal"
          },
          "y": {
            "field": "Close",
            "type": "quantitative"
          }
        },
        "transform": [
          {
            "window": [
              {
                "op": "max",
                "field": "Close",
                "as": "maxPrice"
              }
            ],
            "frame": [null, null]
          },
          {
            "filter": "datum['Close'] == datum['maxPrice']"
          }
        ]
      },
      {
        "mark": {
        "type": "point",
        "shape": "circle",
        "color": "#ff0008",
        "size": 100,
        "filled": true
        },
        "encoding": {
          "x": {
            "field": "Date",
            "type": "temporal"
          },
          "y": {
            "field": "Close",
            "type": "quantitative"
          }
        },
        "transform": [
          {
            "window": [
              {
                "op": "min",
                "field": "Close",
                "as": "minPrice"
              }
            ],
            "frame": [null, null]
          },
          {
            "filter": "datum['Close'] == datum['minPrice']"
          }
        ]
      }
    ]
  }
   
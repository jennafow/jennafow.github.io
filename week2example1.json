 {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": {
      "text": "Exports - Bangladesh",
      "subtitle": ["Current USD | Source: BBS (WB) through ECO API", ""],
      "fontSize": 20,
      "color": "#900C3F",
      "subtitleFontSize": 16,
      "subtitleFontWeight": "lighter",
      "subtitleColor": "#C70039",
      "anchor": "middle"
    },

  "data": {
    "url": "https://api.economicsobservatory.com/bgd/expo?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#1f832c",
    "strokeWidth": "2"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}
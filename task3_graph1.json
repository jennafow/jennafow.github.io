{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Child Poverty Rates",
        "anchor": "start",
        "subtitle": "Poverty Rates Aggregated from Local Authority level to Region level",
        "fontSize": "24",
        "subtitleFontSize": "16",
        "color": "#1f832c",
        "subtitleColor": "#000000"},

        "height": "400",
        "width": "800",
        "autosize": {
          "type": "fit",
          "contains": "padding"
        },
        "background": "#e2e4e2",
        "view": {
          "fill": "#e2e4e2",
          "strokeOpacity": 0
        },

    "data": {"url": "child_poverty_region.csv"},
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {"field": "Year"},
      "y": {"field": "Percentage", "type": "quantitative", "grid": false},
      "color": {"field": "Region", "type": "nominal"}
    }
  }


   
